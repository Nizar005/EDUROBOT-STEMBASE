int compare(){
  if(ranging(red, 111,5,5) && ranging(green, 72, 5, 5) && ranging(blue, 88, 5, 5)){ //start
    return (1);
  }
  else if(ranging(red, 80,5,5) && ranging(green, 86, 5, 5) && ranging(blue, 92, 5, 5)){ //lurus
    return (2);
  }
  else if(ranging(red, 97,5,5) && ranging(green, 103, 5, 5) && ranging(blue, 53, 5, 5)){ //kiri
    return (3);
  }
  else if(ranging(red, 172,5,5) && ranging(green, 54, 5, 5) && ranging(blue, 33, 5, 5)){ //kanan
    return (4);
  }
  else if(ranging(red, 200,5,5) && ranging(green, 37, 5, 5) && ranging(blue, 37, 5, 5)){ //putar balik
    return (5);
  }
  else if(ranging(red, 195,5,5) && ranging(green, 38, 5, 5) && ranging(blue, 42, 5, 5)){ //stop
    return (6);
  }
  else{
    return (0);
  }
}

void intoarray(int data){
  if (insstep < 20) {
    ins[insstep] = data;
    insstep++;
  }
}

bool ranging(int in, int set, int min, int max){
  return (in >= set-min && in <= set+max);
}

